{
    "id": "com.kayys.email-sender",
    "name": "Email Sender",
    "version": "1.2.0",
    "description": "Send transactional emails",
    "author": "kayys",
    "category": "integrations",
    "ui": {
        "type": "flutter-plugin",
        "package": "email_sender_ui_v1.zip",
        "entryWidget": "EmailSenderWidget",
        "uiSchema": "schemas/email_sender_ui.json"
    },
    "backend": {
        "type": "quarkus-jar",
        "mavenCoordinate": "tech.kayys:email-plugin:1.2.0",
        "entryClass": "tech.kayys.plugins.email.EmailPlugin"
    },
    "nodeDescriptor": "schemas/email_node_descriptor.json",
    "requiredSecrets": [
        "smtp.username",
        "smtp.password"
    ],
    "capabilities": [
        "basic-execution",
        "mcp-tools"
    ],
    "compat": {
        "quarkus": ">=3.0.0",
        "pluginApi": ">=3.0.0 <4.0.0"
    },
    "signing": {
        "sha256": "...",
        "signature": "..."
    }
}