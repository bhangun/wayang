{
    "$id": "https://kayys.tech/schema/v1/agent.llm.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Agent LLM Node",
    "allOf": [
        {
            "$ref": "../core/node-base.schema.json"
        },
        {
            "type": "object",
            "properties": {
                "properties": {
                    "type": "object",
                    "required": [
                        "model"
                    ],
                    "properties": {
                        "model": {
                            "type": "object",
                            "required": [
                                "provider",
                                "name"
                            ],
                            "properties": {
                                "provider": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "temperature": {
                                    "type": "number"
                                },
                                "maxTokens": {
                                    "type": "integer"
                                }
                            }
                        },
                        "memory": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "vectorStore": {
                                    "type": "string"
                                }
                            }
                        },
                        "tools": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    ]
}