{
    "$id": "https://kayys.tech/schema/v1/provenance.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Provenance Schema",
    "type": "object",
    "properties": {
        "enabled": {
            "type": "boolean",
            "default": true
        },
        "collect": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "inputs",
                    "outputs",
                    "model_tokens",
                    "latency",
                    "stderr",
                    "stdout"
                ]
            }
        },
        "retentionDays": {
            "type": "integer",
            "minimum": 0,
            "default": 30
        }
    }
}