{
    "$id": "https://kayys.tech/schema/v1/resource-profile.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Resource Profile Schema",
    "type": "object",
    "properties": {
        "cpu": {
            "type": "string",
            "pattern": "^\\d+m?$",
            "default": "100m"
        },
        "memory": {
            "type": "string",
            "pattern": "^\\d+[KMG]i?$",
            "default": "128Mi"
        },
        "gpu": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "ephemeralStorage": {
            "type": "string",
            "pattern": "^\\d+[KMG]i?$"
        },
        "timeoutMs": {
            "type": "integer",
            "minimum": 100,
            "default": 30000
        }
    }
}