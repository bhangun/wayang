{
    "$id": "https://kayys.tech/schema/v1/telemetry.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry Schema",
    "type": "object",
    "properties": {
        "enabled": {
            "type": "boolean",
            "default": true
        },
        "events": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "latency",
                    "memory",
                    "token_usage",
                    "errors",
                    "throughput",
                    "custom"
                ]
            }
        },
        "sampleRate": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.05
        },
        "traceContextHeader": {
            "type": "string",
            "default": "x-trace-id"
        },
        "metricsPrefix": {
            "type": "string"
        }
    }
}