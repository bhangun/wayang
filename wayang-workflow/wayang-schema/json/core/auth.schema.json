{
    "$id": "https://kayys.tech/schema/v1/auth.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Authentication Schema",
    "type": "object",
    "properties": {
        "scheme": {
            "type": "string",
            "enum": [
                "none",
                "basic",
                "bearer",
                "oauth2",
                "apiKey",
                "aws_sigv4"
            ]
        },
        "credentialsRef": {
            "type": "string"
        },
        "scopes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}