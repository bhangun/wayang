{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Plugin Manifest",
    "type": "object",
    "required": [
        "id",
        "name",
        "version",
        "nodeDescriptor"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.-]+\\.[a-zA-Z0-9_.-]+$"
        },
        "name": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "ui": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "json-schema",
                        "flutter-plugin"
                    ]
                },
                "package": {
                    "type": "string"
                },
                "entryWidget": {
                    "type": "string"
                },
                "uiSchema": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ]
        },
        "backend": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "quarkus-jar",
                        "microservice",
                        "extension"
                    ]
                },
                "mavenCoordinate": {
                    "type": "string"
                },
                "entryClass": {
                    "type": "string"
                },
                "endpoint": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ]
        },
        "nodeDescriptor": {
            "type": "string"
        },
        "requiredSecrets": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "capabilities": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "compat": {
            "type": "object",
            "properties": {
                "quarkus": {
                    "type": "string"
                },
                "pluginApi": {
                    "type": "string"
                }
            }
        },
        "signing": {
            "type": "object",
            "properties": {
                "sha256": {
                    "type": "string"
                },
                "signature": {
                    "type": "string"
                }
            }
        },
        "metadata": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}