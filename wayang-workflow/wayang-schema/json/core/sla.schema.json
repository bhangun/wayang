{
    "$id": "https://kayys.tech/schema/v1/concerns/sla.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "SLAConfig",
    "type": "object",
    "properties": {
        "slo": {
            "type": "object",
            "properties": {
                "p95LatencyMs": {
                    "type": "integer"
                },
                "availabilityPct": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                }
            }
        },
        "rateLimit": {
            "type": "object",
            "properties": {
                "requestsPerSecond": {
                    "type": "number"
                },
                "burst": {
                    "type": "integer"
                }
            }
        },
        "quotas": {
            "type": "object",
            "properties": {
                "monthlyTokens": {
                    "type": "integer"
                },
                "monthlyInvocations": {
                    "type": "integer"
                }
            }
        },
        "alerts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "expr": {
                        "type": "string"
                    },
                    "for": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "warning",
                            "critical"
                        ]
                    },
                    "notify": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}