usage




// Example MCP Client Interface
package com.example.mcp;

import io.quarkus.mcp.annotations.MCPClient;
import io.quarkus.mcp.annotations.MCPMethod;
import io.quarkus.mcp.annotations.MCPParam;

import java.util.List;
import java.util.Map;
import java.util.concurrent.CompletableFuture;

/**
 * Example MCP client for a file system server
 */
@MCPClient(
    serverName = "filesystem", 
    configPrefix = "mcp.filesystem"
)
public interface FileSystemMCPClient {

    /**
     * List files in a directory
     */
    @MCPMethod("files/list")
    CompletableFuture<List<FileInfo>> listFiles(@MCPParam("path") String path);

    /**
     * Read file content
     */
    @MCPMethod("files/read")
    CompletableFuture<String> readFile(@MCPParam("path") String path);

    /**
     * Write file content (synchronous)
     */
    @MCPMethod("files/write")
    void writeFile(@MCPParam("path") String path, @MCPParam("content") String content);

    /**
     * Get file metadata
     */
    @MCPMethod("files/info")
    FileInfo getFileInfo(@MCPParam("path") String path);

    /**
     * Search files
     */
    @MCPMethod("files/search")
    CompletableFuture<List<FileInfo>> searchFiles(
        @MCPParam("pattern") String pattern,
        @MCPParam("directory") String directory,
        @MCPParam("recursive") boolean recursive
    );
}

// Data transfer objects
class FileInfo {
    private String path;
    private String name;
    private long size;
    private String type;
    private long lastModified;
    private Map<String, Object> metadata;

    // Constructors, getters, setters
    public FileInfo() {}

    public FileInfo(String path, String name, long size, String type, long lastModified) {
        this.path = path;
        this.name = name;
        this.size = size;
        this.type = type;
        this.lastModified = lastModified;
    }

    // Getters and setters
    public String getPath() { return path; }
    public void setPath(String path) { this.path = path; }

    public String getName() { return name; }
    public void setName(String name) { this.name = name; }

    public long getSize() { return size; }
    public void setSize(long size) { this.size = size; }

    public String getType() { return type; }
    public void setType(String type) { this.type = type; }

    public long getLastModified() { return lastModified; }
    public void setLastModified(long lastModified) { this.lastModified = lastModified; }

    public Map<String, Object> getMetadata() { return metadata; }
    public void setMetadata(Map<String, Object> metadata) { this.metadata = metadata; }
}

// Example service using the MCP client
@ApplicationScoped
public class FileService {

    @Inject
    FileSystemMCPClient fileSystemClient;

    public CompletableFuture<List<String>> listDocuments(String directory) {
        return fileSystemClient.listFiles(directory)
            .thenApply(files -> files.stream()
                .filter(file -> file.getType().equals("document"))
                .map(FileInfo::getName)
                .collect(Collectors.toList()));
    }

    public CompletableFuture<String> readDocument(String path) {
        return fileSystemClient.readFile(path);
    }

    public void saveDocument(String path, String content) {
        fileSystemClient.writeFile(path, content);
    }

    public CompletableFuture<List<FileInfo>> findDocuments(String query, String directory) {
        return fileSystemClient.searchFiles(query, directory, true)
            .thenApply(files -> files.stream()
                .filter(file -> file.getType().equals("document"))
                .collect(Collectors.toList()));
    }
}

// Example REST endpoint
@Path("/api/files")
@ApplicationScoped
public class FileResource {

    @Inject
    FileService fileService;

    @GET
    @Path("/list")
    @Produces(MediaType.APPLICATION_JSON)
    public Uni<List<String>> listFiles(@QueryParam("directory") String directory) {
        return Uni.createFrom().completionStage(
            fileService.listDocuments(directory != null ? directory : "/")
        );
    }

    @GET
    @Path("/content")
    @Produces(MediaType.TEXT_PLAIN)
    public Uni<String> getFileContent(@QueryParam("path") String path) {
        if (path == null) {
            throw new BadRequestException("Path parameter is required");
        }
        return Uni.createFrom().completionStage(fileService.readDocument(path));
    }

    @POST
    @Path("/content")
    @Consumes(MediaType.TEXT_PLAIN)
    public Response saveFileContent(
            @QueryParam("path") String path,
            String content) {
        if (path == null) {
            throw new BadRequestException("Path parameter is required");
        }
        
        fileService.saveDocument(path, content);
        return Response.ok().build();
    }

    @GET
    @Path("/search")
    @Produces(MediaType.APPLICATION_JSON)
    public Uni<List<FileInfo>> searchFiles(
            @QueryParam("query") String query,
            @QueryParam("directory") String directory) {
        if (query == null) {
            throw new BadRequestException("Query parameter is required");
        }
        
        return Uni.createFrom().completionStage(
            fileService.findDocuments(query, directory != null ? directory : "/")
        );
    }
}

// Example of multiple MCP clients
@MCPClient(serverName = "database", configPrefix = "mcp.database")
public interface DatabaseMCPClient {

    @MCPMethod("query/execute")
    CompletableFuture<QueryResult> executeQuery(@MCPParam("sql") String sql);

    @MCPMethod("schema/tables")
    List<TableInfo> listTables();

    @MCPMethod("transaction/begin")
    CompletableFuture<String> beginTransaction();

    @MCPMethod("transaction/commit")
    void commitTransaction(@MCPParam("transactionId") String transactionId);

    @MCPMethod("transaction/rollback")
    void rollbackTransaction(@MCPParam("transactionId") String transactionId);
}

@MCPClient(serverName = "ai-service", configPrefix = "mcp.ai")
public interface AIMCPClient {

    @MCPMethod("text/generate")
    CompletableFuture<String> generateText(
        @MCPParam("prompt") String prompt,
        @MCPParam("maxTokens") int maxTokens,
        @MCPParam("temperature") double temperature
    );

    @MCPMethod("text/summarize")
    CompletableFuture<String> summarizeText(@MCPParam("text") String text);

    @MCPMethod("image/analyze")
    CompletableFuture<ImageAnalysis> analyzeImage(@MCPParam("imageUrl") String imageUrl);
}

// Supporting classes
class QueryResult {
    private List<Map<String, Object>> rows;
    private List<String> columns;
    private int rowCount;

    // Constructors, getters, setters
    public QueryResult() {}
    
    public List<Map<String, Object>> getRows() { return rows; }
    public void setRows(List<Map<String, Object>> rows) { this.rows = rows; }
    
    public List<String> getColumns() { return columns; }
    public void setColumns(List<String> columns) { this.columns = columns; }
    
    public int getRowCount() { return rowCount; }
    public void setRowCount(int rowCount) { this.rowCount = rowCount; }
}

class TableInfo {
    private String name;
    private String schema;
    private List<String> columns;

    // Constructors, getters, setters
    public TableInfo() {}
    
    public String getName() { return name; }
    public void setName(String name) { this.name = name; }
    
    public String getSchema() { return schema; }
    public void setSchema(String schema) { this.schema = schema; }
    
    public List<String> getColumns() { return columns; }
    public void setColumns(List<String> columns) { this.columns = columns; }
}

class ImageAnalysis {
    private List<String> objects;
    private String description;
    private Map<String, Double> confidence;

    // Constructors, getters, setters
    public ImageAnalysis() {}
    
    public List<String> getObjects() { return objects; }
    public void setObjects(List<String> objects) { this.objects = objects; }
    
    public String getDescription() { return description; }
    public void setDescription(String description) { this.description = description; }
    
    public Map<String, Double> getConfidence() { return confidence; }
    public void setConfidence(Map<String, Double> confidence) { this.confidence = confidence; }
}